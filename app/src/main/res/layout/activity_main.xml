<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image"
    android:alpha = "0.9">

    <TextView
        android:id="@+id/View1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtString"
        android:text=""
        android:textSize="15sp"
        android:textColor="#d3d3d3"/>

    <TextView
        android:id="@+id/txtString"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/View1"
        android:layout_alignParentBottom="true"
        android:text=""
        android:textSize="15sp"
        android:textColor="#d3d3d3"/>

    <Button
        android:id="@+id/buttonOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Kreni" />

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonOn"
        android:layout_alignParentRight="true"
        android:text="Stani" />

    <TextView
        android:id="@+id/ygyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xgyro"
        android:layout_centerHorizontal="true"
        android:text="Ziroskop Y = ????"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#d3d3d3"/>

    <TextView
        android:id="@+id/zgyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ygyro"
        android:layout_centerHorizontal="true"
        android:text="Ziroskop Z = ????"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#d3d3d3"/>

    <TextView
        android:id="@+id/xaccel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zgyro"
        android:layout_centerHorizontal="true"
        android:text="Akcelerometar X  = ????"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#d3d3d3"/>
    <TextView
        android:id="@+id/yaccel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xaccel"
        android:layout_centerHorizontal="true"
        android:text="Akcelerometar Y = ????"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#d3d3d3"/>
    <TextView
        android:id="@+id/zaccel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yaccel"
        android:layout_centerHorizontal="true"
        android:text="Akcelerometar Z = ????"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#d3d3d3"/>


    <TextView
        android:id="@+id/xgyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:text="Ziroskop X = ????"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#d3d3d3"/>

</RelativeLayout>